@using TatBlog.Core.Entities
@model Category
<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Slug</label>
        <input asp-for="UrlSlug" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="ShowOnMenu" class="form-check-input" />
        <label class="form-check-label">Hiển thị trên menu</label>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
