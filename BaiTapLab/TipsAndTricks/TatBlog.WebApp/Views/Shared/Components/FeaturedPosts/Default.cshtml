@model IEnumerable<Post>

<div class="featured-posts">
    <h3 class="text-success mb-2">
        Bài viết nổi bật
    </h3>

    <ul>
        @foreach (var post in Model)
        {
            <li><a href="@Url.Action("Details", "Posts", new { id = post.Id })">@post.Title</a></li>
        }
    </ul>
</div>