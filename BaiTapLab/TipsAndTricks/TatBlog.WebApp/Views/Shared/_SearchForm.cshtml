<div class="mb-4">
    <h3 class="text-success mb-2">
        Tìm kiếm bài viết
    </h3>

    <form asp-controller="Blog"
          asp-action="Index"
          method="get">
        <div class="input-group mb-3">
            <input type="text"
                   class="form-control"
                   name="k"
                   placeholder="Emter keyword"
                   aria-label="Enter keyword"
                   aria-describedby="btnSearchPost"/>

            <button class="btn btn-outline-secondary"
                    type="button"
                    id="btnSearchPost">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </form>
</div>